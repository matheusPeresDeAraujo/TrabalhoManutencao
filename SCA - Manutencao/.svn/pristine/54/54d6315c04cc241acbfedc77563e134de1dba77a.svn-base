<%@page contentType="text/html" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>Pesquisar Turmas</title>
    </head>
    <body>
        <h1>Pesquisar Turmas</h1>
        
        <form action="pesquisarCurso.jsp">
            <fieldset style="width: 50%">
                <legend>Pesquisar por:</legend>
                <table>
                    <tr>
                        <td>
                            Curso
                        </td>

                        <td>
                            <select id="curso">
                                <option value="">
                                    Escolha um curso.
                                </option>
                                    
                            </select>
                        </td>
                        
                        <td>
                            Ano
                        </td>
                        
                        <td>
                            <select>
                                <option value="2012">
                                    2012
                                </option>
                            </select>
                        </td>
                        
                        <td>
                            Semestre
                        </td>
                        
                        <td>
                            <select id="periodo" name="periodo">
                                <option value="1">
                                    1
                                </option>

                                <option value="2">
                                    2
                                </option>

                                <option value="3">
                                    3
                                </option>

                                <option value="4">
                                    4
                                </option>

                                <option value="5">
                                    5
                                </option>

                                <option value="6">
                                    6
                                </option>

                                <option value="7">
                                    7
                                </option>

                                <option value="8">
                                    8
                                </option>

                                <option value="9">
                                    9
                                </option>

                                <option value="10">
                                    10
                                </option>
                            </select>
                        </td>
                        
                        <td>
                            Nome Disciplina
                        </td>
                        
                        <td>
                            <input type="text" id="nomeDisciplina" name="nomeDisciplina">
                        </td>
                       
                        <td>
                            <input type="submit" id="Pesquisar" value="Pesquisar"/>
                        </td>

                    </tr>
                </table>
            </fieldset>
        </form>
        <br/>
        <table border="1">
            <tr>
                <th>
                    Cod. Turma
                </th>
                
                <th>
                    Nome Disciplina
                </th>
                
                <th>
                    Nome Professor
                </th>
                
                <th>
                    Ações
                </th>
            </tr>
        </table>
        
        <table>
            <tr>
                 
                <td>
                    <input type="button" id="voltar" value="Voltar" onClick="history.go(-1)"/>
                </td>
                
                <td>
                    <form action="manterTurma.jsp">
                        <input type="submit" id="incluiNovo" value="Incluir Novo"/>
                    </form>
                </td>
            </tr>
            
            
        </table>
    </body>
</html>
