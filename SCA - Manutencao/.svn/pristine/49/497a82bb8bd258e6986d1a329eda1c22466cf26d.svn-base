<%@page contentType="text/html" pageEncoding="UTF-8"%>
<%@taglib  uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>Manter Turma</title>
    </head>
    <body>
        <h1>Manter Turma</h1>
        <form  action="ManterTurmaController?acao=confirmarOperacao&operacao=${operacao}" method="post">
        <table>
            <tr>
                <td>
                    Curso
                </td>
                
                <td>
                    <select id="curso" name="curso">
                        <option value="">
                            Selecione um curso.
                        </option>
                    </select>
                </td>
                
                <td>
                    Vagas
                </td>
                
                <td>
                    <input type="text" id="vagas" name="vagas">
                </td>
            </tr>
            
            <tr>
                <td>
                    Disciplina
                </td>
                
                <td>
                    <select id="disciplina" name="disciplina">
                        <option value="">
                            Selecione uma disciplina.
                        </option>
                    </select>
                </td>
                
                <td>
                    Professor
                </td>
                
                <td>
                    <select id="professor" name="professor">
                        <option value="">
                            Selecione um professor.
                        </option>
                    </select>
                </td>
                
            </tr>
            
            <tr>
                <td>
                    Ano
                </td>
                
                <td>
                    <input type="text" name="ano" id="ano">
                </td>
                
                <td>
                    Semestre
                </td>
                
                <td>
                    <input type="text" name="semestre" id="semestre">
                </td>
                
                <td>
                    Sala
                </td>
                
                <td>
                    <input type="text" name="sala" id="sala">
                </td>
                
            </tr>
            
            <tr>
                <td colspan="6">
                    <fieldset>
                        <legend>
                            Horarios
                        </legend>
                        
                        <table>
                            <tr>
                                <td>
                                    Dia da Semana
                                </td>
                                <td>
                                    <select id="diaSemana" name="diaSemana">
                                        <option value="0">
                                            Segunda-Feira
                                        </option>
                                    </select>
                                </td>
                                
                                <td>
                                    Inicio
                                </td>
                                
                                <td>
                                    <input type="text" name="inicio" id="inicio">
                                </td>
                                
                                <td>
                                    Final
                                </td>
                                
                                <td>
                                    <input type="text" name="final" id="final">
                                </td>
                                
                                <td>
                                    <form>
                                        <input type="submit" value="Adicionar" id="adicionar>"
                                    </form>
                                    
                                </td>
                            </tr>
                        </table>
                        <table border="1" style="width: 100%;">
                            <tr>
                                <th colspan="2">
                                    Dia da Semana
                                </th>
                                
                                <th colspan="2">
                                    In√≠cio
                                </th>
                                
                                <th colspan="2">
                                    Final
                                </th>
                                
                                <th>
                                    Remover
                                </th>
                            </tr>
                        </table>    
                    </fieldset>
                </td>
            </tr>
            
            <tr>
                    <td align="left" colspan="3">
                        <input type="button" id="voltar" name="voltar" value="Voltar" onClick="history.go(-1)"/>
                    </td>
                    
                    <td align="right" colspan="3">
                        <input type="submit" id="confirmar" name="confirmar" value="Confirmar"/>
                    </td>
            </tr>
        </table>
        </form>
    </body>
</html>
